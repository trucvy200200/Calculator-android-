<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="digitbutton" parent="commonbutton">
        <item name="android:backgroundTint">#8f8989</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="operbutton" parent="commonbutton">
        <item name="android:backgroundTint">#6d03ab</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="operbuttonspe" parent="commonbutton">
        <item name="android:backgroundTint">#6d03ab</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="commonbutton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">28dp</item>
    </style>
</resources>